generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TrendHistory {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  timestamp DateTime @default(now())
  geo       String
  rank      Int
  keyword   String
  score     Int
  data      String   // JSON string of the full trend object
  
  @@index([timestamp, geo])
}
